{% extends 'base.html.twig' %}

{% block title %}Semantic Search{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Search!</h1>

    <form method="get">
        <input id="query" name="query" type="text" value="{{ query }}" size="80"/>
        <select id="model" name="model">
            {% for case in enum_cases('\\App\\Entity\\ModelEnum') %}
                <option value="{{ case.value }}" {{ model == case.value ? 'selected' : '' }}>{{ case.modelName() }}</option>
            {% endfor %}
        </select>
        <input type="submit">
    </form>
    {% for document in documents %}
    <div>
        <h3>{{ document.title }}</h3>
        <p>{{ document.content }}</p>
    </div>
    {% endfor %}
</div>
{% endblock %}
